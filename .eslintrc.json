{
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "json",
        "flowtype"
    ],
    "env": {
        "es6": true,
        "jest": true,
        "node": true,
        "browser": true
    },
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": ["error", { "ignore": ["^test", "^src","^shared"] }],
      "import/extensions" : "off",
      "import/prefer-default-export": "off",
      "arrow-body-style": "off",
      "id-length":["error", {"min":2}]
    },
    "globals": {
      "shallow": false,
      "mount": false
    }
}
